<div class="container">
  <h1 class='text-center mb-3'>Reset Password</h1>
  <div class="col-4 mx-auto">
    <%= form_with url: '/password_resets', class: 'd-flex flex-column' do |f| %>
      <%= f.label :email, 'Email', class: 'form-label' %>
      <%= f.text_field :email, class: 'form-control mb-3' %>
      <%= f.submit 'Reset', class: 'btn btn-warning' %>
    <% end %>

