  <div class="container">
    <div class="col-4 mx-auto justify-content-center">  
      <h1 class='text-center'>Posts</h1>
      <% @posts.each do |post| %>
        <%= render partial: 'post', locals: { post: post } %>
      <% end %>
      <%= link_to 'New post', new_post_path, class:'btn btn-primary mt-3 w-100'  %>
    </div>
  </div>
