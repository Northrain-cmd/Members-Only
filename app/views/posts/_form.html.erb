<% if post.errors.full_messages.any? %>
    <div class='alert alert-danger'>
      <% post.errors.full_messages.each do |message| %>
        <li class='alert alert-danger p-0 border-0 my-0'><%= message %></li>
      <% end %>
    </div>
<% end %>    
<%= form_with model: post, class: 'd-flex flex-column' do |f| %>
  <%= f.label :title, 'Title', class: 'form-label' %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :body, 'Your post', class: 'form-label mt-3' %>
  <%= f.text_area :body, size: '60x8', class: 'form-control' %>
  <%= f.submit class: 'btn btn-success mt-3' %>
<% end %>